{
  "Serilog": {
    "Using": [ "Serilog.Sinks.AzureBlobStorage" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@Level = 'Error' or @Level = 'Fatal' or @Level = 'Warning'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "Async",
                "Args": {
                  "configure": [
                    {
                      "Name": "AzureBlobStorage",
                      "Args": {
                        "connectionString": "DefaultEndpointsProtocol=https;AccountName=railstorageqa;AccountKey=Ag4Swxge8KvFUUJeDTdi1mkOYUgFizSuepyLzSjSKPUi0aYewxUQKGM67brEhsPXhun3ZrCGDoq5SqAKqr+0KA==;EndpointSuffix=core.windows.net",
                        "storageContainerName": "rail-back-forms-api/", 
                        "storageFileName": "errors/{yyyy}/{MM}/{dd}/error-qa-log.log",
                        "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss} {Level:u10}] {Message:lj}{NewLine}{NewLine}{Exception}{NewLine}",
                        "blobSizeLimitBytes": "4000000"
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@Level = 'Information'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "Async",
                "Args": {
                  "configure": [
                    {
                      "Name": "AzureBlobStorage",
                      "Args": {
                        "connectionString": "DefaultEndpointsProtocol=https;AccountName=railstorageqa;AccountKey=Ag4Swxge8KvFUUJeDTdi1mkOYUgFizSuepyLzSjSKPUi0aYewxUQKGM67brEhsPXhun3ZrCGDoq5SqAKqr+0KA==;EndpointSuffix=core.windows.net",
                        "storageContainerName": "rail-back-forms-api/",
                        "storageFileName": "info/{yyyy}/{MM}/{dd}/information-qa-log.log",
                        "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss} {Level:u10}] {Message:lj}{NewLine}{NewLine}{Exception}{NewLine}",
                        "blobSizeLimitBytes": "4000000"
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    ]
  },
  "MailSettings": {
    "MailFrom": "isr.rail.qa@gmail.com",
    "MailTo": "isr.rail.dev@gmail.com",
    "Password": "secretpassword",
    "Host": "smtp.gmail.com",
    "Port": 587
  },
  "Version": "2.1.2",
  "CRMdestination": "http://bezeqonlinepost.azurewebsites.net/crmform.aspx"
}
